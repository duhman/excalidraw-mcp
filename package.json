{
  "name": "excalidraw-mcp",
  "version": "0.1.0",
  "description": "Full-capability Excalidraw MCP server with hybrid JSON + browser engines",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "start:stdio": "node dist/index.js --transport stdio",
    "start:http": "node dist/index.js --transport http",
    "dev:http": "tsx src/index.ts --transport http",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "postinstall": "node scripts/fix-roughjs-import.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "private": true,
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "@excalidraw/mermaid-to-excalidraw": "^2.0.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "mime": "^4.1.0",
    "p-limit": "^7.3.0",
    "playwright": "^1.58.2",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
